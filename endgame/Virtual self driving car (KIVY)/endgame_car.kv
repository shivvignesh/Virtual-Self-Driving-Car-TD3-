#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car>:
    size: 5,5
    origin: 120, 50
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/car.png"
        PopMatrix


<Game>:
    car: game_car
    
    canvas:
        Rectangle:
            pos: self.pos
            size: 1429, 660
            source: "./images/citymap.png"

    Car:
        id: game_car
        center: self.parent.center
    
